@page "{Id?}"
@model RazorPage.Pages.Admin.AddEditRecipeModel
@{
    ViewData["Title"] = Model.IsNewRecipe ? "New Recipe" : "Edit Recipe";
}

<div asp-validation-summary="All"></div>

<form method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="recipe.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="recipe.Name" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="recipe.Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="3" asp-for="recipe.Description" type="text" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="recipe.Ingredients" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" asp-for="recipe.Ingredients" type="text" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="recipe.Directions" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" asp-for="recipe.Directions" type="text" class="form-control"></textarea>
        </div>
    </div>
    <label asp-for="Image" class="col-md-2 control-label"></label>
    <input type="file" asp-for="Image"/>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn btn-primary">Save</button>
            @if (!Model.IsNewRecipe)
            {
                <button type="submit" asp-page-handler="Delete" class="btn btn btn-danger">Delete</button>
            }
        </div>
    </div>
</form>